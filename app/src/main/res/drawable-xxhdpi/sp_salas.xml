<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape >
            <gradient
                android:startColor="#ffbccaff"
                android:endColor="#696969"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#ffffffff" />
            <corners
                android:radius="10dip" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item >
        <shape >
            <gradient
                android:startColor="#EEEEE0"
                android:endColor="#FFFFFF"
                android:angle="90"/>
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
            <corners
                android:radius="10dip" />
            <padding
                android:left="10dp"
                android:right="10dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>