<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape >
            <gradient
                android:startColor="#ff74b1ff"
                android:endColor="#ffbccaff"
                android:angle="90" />
            <stroke
                android:width="1dp"
                android:color="#ffffffff" />
            <corners
                android:radius="18dip" />
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item >
        <shape >
            <gradient
                android:startColor="#ffbccaff"
                android:endColor="#fff9f9ff"
                android:angle="90"/>
            <stroke
                android:width="1dp"
                android:color="#ffffffff" />
            <corners
                android:radius="18dip" />
            <padding
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

</selector>